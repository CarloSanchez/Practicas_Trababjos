<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.OracleDialect</property>
    <property name="hibernate.connection.driver_class">oracle.jdbc.OracleDriver</property>
    <property name="hibernate.connection.url">jdbc:oracle:thin:@localhost:1521:orcl</property>
    <property name="hibernate.connection.username">eventoss</property>
    <property name="hibernate.connection.password">eventos</property>
    <mapping resource="modelo/pojos/Asistente.hbm.xml"/>
    <mapping resource="modelo/pojos/TipoAsistente.hbm.xml"/>
    <mapping resource="modelo/pojos/Institucion.hbm.xml"/>
    <mapping resource="modelo/pojos/Evento.hbm.xml"/>
    <mapping resource="modelo/pojos/Medio.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
